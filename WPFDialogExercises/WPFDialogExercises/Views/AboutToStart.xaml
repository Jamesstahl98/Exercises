<Window x:Class="WPFDialogExercises.Views.AboutToStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDialogExercises.Views"
        mc:Ignorable="d"
        Title="AboutToStart" Height="250" Width="200">
    <Grid>
        <TextBlock Text="Application is about to start!"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0"/>
        <Button Content="OK"
                Width="60"
                Height="30"
                VerticalAlignment="Bottom"
                Margin="0,0,0,40"
                Click="Button_Click"/>
    </Grid>
</Window>
