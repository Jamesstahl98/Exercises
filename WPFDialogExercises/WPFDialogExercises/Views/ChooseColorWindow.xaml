<Window x:Class="WPFDialogExercises.Views.ChooseColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDialogExercises.Views"
        mc:Ignorable="d"
        Title="ChooseColorWindow" Height="350" Width="250">
    <Grid>
        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    Width="100">
            <Rectangle Width="100"
                       Height="100"
                       Margin="0,20,0,0"/>
            <Label Content="Red" HorizontalAlignment="Center"/>
            <Slider/>
            <Label Content="Green" HorizontalAlignment="Center"/>
            <Slider/>
            <Label Content="Blue" HorizontalAlignment="Center"/>
            <Slider/>
        </StackPanel>
        <DockPanel Width="150"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom">
            <Button Content="Cancel"
                    HorizontalAlignment="Left"
                    Width="60"
                    Margin="0,0,0,10"/>
            <Button Content="OK"
                    HorizontalAlignment="Right"
                    Width="60"
                    Margin="0,0,0,10"/>
        </DockPanel>
    </Grid>
</Window>
