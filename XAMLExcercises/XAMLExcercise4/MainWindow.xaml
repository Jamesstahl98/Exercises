<Window x:Class="XAMLExcercise4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAMLExcercise4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="50" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,10,0">Play</Button>
            <Button Width="50" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Top">Options</Button>
            <Button Width="50" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,0,0">Quit</Button>
        </StackPanel>
    </Grid>
</Window>
